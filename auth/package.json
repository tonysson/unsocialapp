{
  "name": "auth",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "description": "Authentication microservice",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier --check ./src/**/*.ts",
    "prettier:fix": "prettier --write ./src/**/*.ts",
    "start:dev": "nodemon src/index.ts",
    "start": "",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "preset" : "ts-jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier:fix",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
